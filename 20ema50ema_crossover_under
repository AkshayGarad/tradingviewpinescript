// This variable will hold the value of the 20 EMA
var ema20 = ema(close, 20);

// This variable will hold the value of the 50 EMA
var ema50 = ema(close, 50);

// Check if the 20 EMA has crossed above the 50 EMA
if (cross(ema20, ema50) and ema20 > ema50)
{
    // If the 20 EMA has crossed above the 50 EMA, buy
    strategy.entry("Buy", strategy.long);
}

// Check if the 20 EMA has crossed below the 50 EMA
if (cross(ema20, ema50) and ema20 < ema50)
{
    // If the 20 EMA has crossed below the 50 EMA, sell
    strategy.entry("Sell", strategy.short);
}
