// Define the input parameters for the script
study("Ascending Triangle Pattern", overlay=true)
length = input(14, minval=1)

// Define the trendlines and their equations
support = trendline(high,length,0.5,0.5, color=green)
resistance = hline(lowest(high, length), color=green)

// Plot the trendlines on the chart
plot(support, "Support", 2)
plot(resistance, "Resistance", 2)

// Identify the pattern
ascendingTriangle = crossover(support, resistance)
alertcondition(ascendingTriangle, title='Ascending Triangle', message='Ascending triangle pattern identified')