//@version=4
study("Bollinger Bands", overlay=true)

// Define the input parameters
length = input(20, minval=1)
multiplier = input(2.0, minval=0.1, maxval=10)

// Calculate the Bollinger Bands
middle = sma(close, length)
upper = middle + multiplier * stdev(close, length)
lower = middle - multiplier * stdev(close, length)

// Plot the Bollinger Bands
plot(middle, color=silver, linewidth=1)
plot(upper, color=red, linewidth=1)
plot(lower, color=green, linewidth=1)

// Fill the area between the Bollinger Bands
fill(upper, lower, color=blue, transp=70)
