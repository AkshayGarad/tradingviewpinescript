// This variable will hold the value of the current volume
var currentVolume = volume;

// This variable will hold the value of the previous volume
var prevVolume = volume[1];

// Check if the current volume is higher than the previous volume
if (currentVolume > prevVolume)
{
    // Check if the current candle is green
    if (close > open)
    {
        // If the current volume is higher than the previous volume and the current candle is green, show a sell signal
        plot(50, "Sell", color.red);
    }
}
