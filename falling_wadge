// Define the high and low values for the wedge
high = highest(high, length)
low = lowest(low, length)

// Define the trendlines for the wedge
downwardTrend = trendline(high, 0, length, 0, -1, 0, linewidth, color)
upwardTrend = trendline(low, 0, length, 0, 1, 0, linewidth, color)

// Fill the area between the trendlines
fill(downwardTrend, upwardTrend, color)

// Plot the trendlines
plot(downwardTrend, "Downward Trendline", linewidth)
plot(upwardTrend, "Upward Trendline", linewidth)
