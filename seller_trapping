// This variable will hold the value of the current volume
var currentVol = volume;

// This variable will hold the value of the previous volume
var prevVol = volume[1];

// This variable will hold the value of the current close price
var currentClose = close;

// This variable will hold the value of the previous close price
var prevClose = close[1];

// Check if the current volume is higher than the previous volume
if (currentVol > prevVol)
{
    // Check if the current close price is lower than the previous close price
    if (currentClose < prevClose)
    {
        // If the current volume is higher than the previous volume and the current close price is lower than the previous close price, show a buy signal
        plot(50, "Buy", color.green);
    }
}
